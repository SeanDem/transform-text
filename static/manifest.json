{
	"name": "TransformText",
	"description": "A browser extension that transforms text on webpages for you. Made by Sean Demeritt",
	"version": "1.0.5",
	"manifest_version": 3,
	"host_permissions": ["<all_urls>"],
	"permissions": ["storage", "scripting", "downloads"],
	"background": {
		"service_worker": "service_worker.js"
	},
	"icons": {
		"16": "icons/icon12.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_title": "TransformText",
		"default_icon": {
			"16": "icons/icon12.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_popup": "index.html"
	}
}
